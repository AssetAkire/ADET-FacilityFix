<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


@* Request Type Modal *@
@section Scripts { 
    <script>
        document.getElementById("openRequestTypeBtn").addEventListener("click", function () {
            // Close the current modal
            var repairModal = bootstrap.Modal.getInstance(document.getElementById('repairRequestModal'));
            repairModal.hide();

            // Open the next modal
            var requestTypeModal = new bootstrap.Modal(document.getElementById('requestTypeModal'));
            requestTypeModal.show();
        });
    </script>
}
