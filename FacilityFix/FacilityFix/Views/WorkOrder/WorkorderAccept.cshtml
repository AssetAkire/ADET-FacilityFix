                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>REQ-001</td>
                            <td>Leaking Kitchen Faucet</td>
                            <td>David Kim</td>
                            <td>May 24, 2025</td>
                            <td><span class="badge bg-light-success text-success">Plumbing</span></td>
                            <td><span class="badge-dot bg-warning me-1"></span>Medium</td>
                            <td>
                                <button class="btn btn-sm" title="More options">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

