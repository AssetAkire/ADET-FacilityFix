@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <script src="~/js/login.js" asp-append-version="true" defer></script>
</head>

<body class="overflow-hidden">

    <div class="container-fluid">
        <div class="row min-vh-100">
            <!-- Left Illustration Panel -->
            <div class="col-md-6 d-none d-md-flex text-white flex-column position-relative left-part">
                <!-- TOP-LEFT LOGO -->
                <div class="title-logo top-0 start-0 p-3">
                    <img class="dashboard-logo" src="~/img/logo.png" alt="FacilityFix" style="max-height: 40px;"/>
                    <span class="logo-text">FacilityFix</span>
                </div>

                <!-- CENTERED CONTENT -->
                <div class="text-center px-4 w-100 d-flex flex-column justify-content-center align-items-center flex-grow-1">
                    <img src="~/img/leftpartgraphics.png" alt="Activity Dashboard" class="img-fluid" style="max-height: 400px;" />
                </div>
            </div>

            <!-- Right Form Panel -->
            <div class="col-md-6 d-flex align-items-center justify-content-center bg-light">
                <div class="w-75 my-5 mx-5">
                    <h3 class="fw-bold mb-2">Sign in to your Account</h3>
                    <p class="text-muted">Welcome back! Please enter your detail</p>

                    <form asp-action="Register" method="post">
                        <div class="mb-3 position-relative">
                            <input type="email" name="Email" class="form-control ps-5" placeholder="Email" required oninput="toggleIcon(this)" />
                            <img src="~/img/mail.png" alt="Email icon" class="icon-inside">
                        </div>

                        <div class="mb-3 position-relative">
                            <input type="password" name="Password" class="form-control ps-5" placeholder="Password" required minlength="8" oninput="toggleIcon(this)" />
                            <img src="~/img/lock.png" alt="Password icon" class="icon-inside">
                            <span class="position-absolute end-0 top-50 translate-middle-y me-3">
                                <img src="~/img/eye-off.png" alt="Toggle visibility icon" style="cursor:pointer;" />
                            </span>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center my-3">
                            <div class="form-check m-0">
                                <input class="form-check-input" type="checkbox" id="rememberme">
                                <label class="form-check-label" for="rememberme">
                                Remember me
                                </label>
                            </div>
                            <a href="#" class="text-decoration-none">Forgot Password?</a>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>

                        <div class="text-center mt-3">
                            <label class="form-check-label">
                                    Don't have an Account? <a asp-controller="Home" asp-action="Index">Sign Up</a>
                            </label>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-controller="Profile" asp-action="Profile">Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>