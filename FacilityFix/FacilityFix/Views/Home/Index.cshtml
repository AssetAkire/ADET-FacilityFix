@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FacilityFix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/signup.css" asp-append-version="true" />
    <script src="~/js/signup.js" asp-append-version="true" defer></script>
</head>

<body class="overflow-hidden">

    <div class="container-fluid">
        <div class="row min-vh-100">
            <!-- Left Illustration Panel -->
            <div class="col-md-6 d-none d-md-flex text-white flex-column position-relative left-part">
                <!-- TOP-LEFT LOGO -->
                <div class="title-logo top-0 start-0 p-3">
                    <img class="dashboard-logo" src="~/img/logo.png" alt="FacilityFix" style="max-height: 40px;"/>
                    <span class="logo-text">FacilityFix</span>
                </div>

                <!-- CENTERED CONTENT -->
                <div class="text-center px-4 w-100 d-flex flex-column justify-content-center align-items-center flex-grow-1">
                    <img src="~/img/leftpartgraphics.png" alt="Activity Dashboard" class="img-fluid" style="max-height: 400px;" />
                </div>
            </div>

            <!-- Right Form Panel -->
            <div class="col-md-6 d-flex align-items-center justify-content-center bg-light">
                <div class="w-75 my-5 mx-5">
                    <h3 class="fw-bold mb-2">Create an Account</h3>
                    <p class="text-muted">Welcome! Please enter your detail</p>

                    <form asp-action="Register" method="post">
                        <div class="position-relative mt-4 mb-3">
                            <input type="text" name="Username" class="form-control ps-5" placeholder="Username" oninput="toggleIcon(this)" required />
                            <img src="~/img/user.png" alt="Email icon" class="icon-inside">
                        </div>

                        <div class="position-relative mb-3">
                            <input type="date" name="DateOfBirth" class="form-control ps-5" oninput="toggleIcon(this)" required />
                            <img src="~/img/calendar.png" alt="Email icon" class="icon-inside">
                        </div>

                        <div class="position-relative mb-3">
                            <input type="text" name="UnitNumber" class="form-control ps-5" placeholder="Unit Number" oninput="toggleIcon(this)" required />
                            <img src="~/img/building.png" alt="Email icon" class="icon-inside">
                        </div>

                        <div class="position-relative mb-3">
                            <input type="email" name="Email" class="form-control ps-5" placeholder="Email" oninput="toggleIcon(this)" required/>
                            <img src="~/img/mail.png" alt="Email icon" class="icon-inside">
                        </div>

                        <div class="mb-3 position-relative">
                            <input type="password" name="Password" class="form-control ps-5" placeholder="Password" required minlength="8" oninput="toggleIcon(this)" />
                            <img src="~/img/lock.png" alt="Password icon" class="icon-inside">
                            <span class="position-absolute end-0 top-50 translate-middle-y me-3">
                                <img src="~/img/eye-off.png" alt="Toggle visibility icon" style="cursor:pointer;" />
                            </span>
                        </div>

                        <div class="form-check my-3">
                            <input class="form-check-input" type="checkbox" id="termsCheck" required />
                            <small class="form-check-label" for="termsCheck">
                                By creating an account you agree to the <a href="#">Terms & Conditions</a> and our <a
                                    href="#">Privacy Policy</a>.
                            </small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Create an Account</button>
                        </div>

                        <div class="text-center mt-3">
                            <label class="form-check-label">
                                    Already have an account? <a asp-controller="Home" asp-action="Login">Log In</a>
                            </label>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-controller="Profile" asp-action="TenantProfile">Profile</a>
                    </div>

                    <div class="text-center mt-3"></div>
                        <span>Already have an account?</span>
                        <a asp-controller="Account" asp-action="Login" class="ms-1">Log In</a>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</body>