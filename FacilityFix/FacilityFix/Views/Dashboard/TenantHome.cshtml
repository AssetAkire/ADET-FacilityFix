@{
    ViewBag.Title = "Tenant Home Data";
    ViewBag.ActiveMenu = "TenantHome";
    string[] RequestTable = new string[] { "Request No.", "Title", "Staff", "Date", "Status", "Actions" };
    Layout = "~/Views/Shared/_TenantLayout.cshtml";
}
@section Styles {
    <link href="~/Content/admin_home.css" rel="stylesheet" />
}

<!-- Tenant Home Dashboard Section -->
<div class="container my-5">
    <h2 class="fw-semibold mb-4">Welcome, <span class="h5 mb-0">Tenant Name</span></h2>
    <h6 class="fw-semibold mb-4">Unit <span class="text-muted">#304</span> Last Login: <span class="text-muted">2023-10-01 12:34 PM</span></h6>
    
    <!-- Dashboard Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card h-100">
                <div class="card-body">

                    <!-- Active Request -->
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="card-title mb-0">ACTIVE REQUEST</h5>
                        <div class="summary-icon bg-blue">
                            <img src="~/img/Bluebox.png" alt="Iconpng"/>
                        </div>
                    </div>
                    @section Scripts {
                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
                    }
                    <p class="card-text mt-3">1</p>
                </div>
            </div>
        </div>

        <!-- Scheduled Repairs -->
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="card-title mb-0">SCHEDULED REPAIRS</h5>
                        <div class="summary-icon bg-green">
                            <img src="~/img/GreenCalendarC.png" alt="Iconpng"/>
                        </div>
                    </div>
                    <p class="card-text mt-3">1</p>
                </div>
            </div>
        </div>

        <!-- Last Request -->
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="card-title mb-0">LAST REQUEST</h5>
                        <div class="summary-icon bg-red">
                            <img src="~/img/RedRefresh.png" alt="Iconpng"/>
                        </div>
                    </div>
                    <p class="card-text mt-3">1</p>
                </div>
            </div>
        </div>

    </div>

    <div class="bg-white p-4 shadow-sm border border-2 rounded border-secondary p-3">
        <div class="row align-items-center mb-4">
            <div class="col-md-8 d-flex align-items-center">
                <div>
                    <h4 class="fw-semibold">Recent Repair Activity</h4>
                </div>
            </div>
        </div>

        <!-- Request Table -->
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <!-- Request Table Header -->
                <tr>
                    @{
                        foreach (var header in RequestTable)
                        {
                            <th>@header</th>
                        }
                    }
                </tr>
            </thead>
            <tbody>
                <!-- Detail Row -->
                <tr>
                    <td>RQ-001</td>
                    <td>Leaking Faucet</td>
                    <td>Juan Dela Cruz</td>
                    <td>2023-10-01</td>
                    <td><span class="badge bg-warning text-dark">In Progress</span></td>
                    <!-- Action Dropdown -->
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" id="actionsDropdown">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="actionsDropdown">
                                <li>
                                    <a class="dropdown-item text-warning" href="#" data-bs-toggle="modal" data-bs-target="#viewModal">View</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-success" href="#" data-bs-toggle="modal" data-bs-target="#editModal">Edit</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

            <!-- View Modal -->
            <div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="viewModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="viewModalLabel">View Request</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p><strong>REQ No.:</strong> REQ-001</p>
                            <p><strong>Title:</strong> Leaking Faucet</p>
                            <p><strong>Staff:</strong> Juan Dela Cruz</p>
                            <p><strong>Date:</strong> 2023-10-01</p>
                            <p><strong>Status:</strong> <span class="badge bg-warning text-dark">In Progress</span></p>
                            <p><strong>Description:</strong> The faucet in the kitchen is leaking continuously.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Modal -->
            <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel">Edit Request</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="mb-3">
                                    <label for="editTitle" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="editTitle" value="Leaking Faucet">
                                </div>
                                <div class="mb-3">
                                    <label for="editStaff" class="form-label">Staff</label>
                                    <input type="text" class="form-control" id="editStaff" value="Juan Dela Cruz">
                                </div>
                                <div class="mb-3">
                                    <label for="editDate" class="form-label">Date</label>
                                    <input type="date" class="form-control" id="editDate" value="2023-10-01">
                                </div>
                                <div class="mb-3">
                                    <label for="editStatus" class="form-label">Status</label>
                                    <select class="form-select" id="editStatus">
                                        <option selected>In Progress</option>
                                        <option>Completed</option>
                                        <option>Pending</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="editDescription" class="form-label">Description</label>
                                    <textarea class="form-control" id="editDescription" rows="3">The faucet in the kitchen is leaking continuously.</textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-success">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Delete Request</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete <strong>REQ-001: Leaking Faucet</strong>?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>